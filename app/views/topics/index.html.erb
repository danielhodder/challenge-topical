<div class="row">
  <div class="span12">
    <h1 class="title">Topics</h1>

    <table class="table table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th style="width: 100px;">Created By</th>
          <th style="width: 100px;"><%= link_to('New Topic', new_topic_path(), class: 'btn btn-primary pull-right') %></th>
        </tr>
      </thead>

      <tbody>
        <%= render @topics %>
      </tbody>
    </table>
  </div>
</div>