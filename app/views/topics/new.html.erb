<div class="row">
  <div class="span12">
    <h1 class="title">Create a new topic</h1>

    <%= form_for(@topic, class: 'form-horizontal') do |builder| %>
      <% if @topic.erros.any? %>
        <div class="alert alert-error">
          <h4>There were some errors. Please correct them and try again</h4>
          <ul>
            <% @topic.errors.full_messages.each do |message| %>
              <li><%=message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


    <% end %>
  </div>
</div>